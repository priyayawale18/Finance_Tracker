<div class="container row">
	<div class="col-md-6">
	
<% if @stock %>
<div class="card card-header">
	<h2>Stock Details</h2><hr>
	<strong>Symbol:</strong> <%= @stock.ticker %><br><br>
	<strong>Name:</strong> <%= @stock.name %><br><br>
	<strong>Price:</strong> <%= @stock.last_price %><br><br>
	<% if current_user.can_track_stock?(@stock.ticker) %>
		<%= button_to 'Add to portfolio', user_stocks_path(user: current_user, ticker: @stock.ticker), class: "btn btn-xs btn-success", method: :post %>
	<% else %>
	  <span class="badge badge-secondary">
	  	You are already tracking
	  	<% if !current_user.under_stock_limit? %>
          5 stocks
	  	<% end %>
	  	<% if current_user.stock_already_tracked?(@stock.ticker) %>
	  	   this stock
	  	<% end %>
	  </span>	
	<% end %>	
</div>	
<% end %>

</div>

	